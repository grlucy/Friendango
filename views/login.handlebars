<body class="login-body">
    <!-- Logo Section -->
    <header class="bg-green">
        <div class="container">
            <div class="row">
                <div class="col-md-12 text-center topBotPad" id="dashboard-chart">
                    <!-- Logo -->
                    <a href="/">
                        <img src="/images/friendango-logo-white-300px.png" width="225" />
                    </a>
                </div>
            </div>
        </div>
    </header>
    <!-- Login Form Section -->
    <section>
        <div class="container">
            <div class="row spacer"></div>
            <div class="row">
                <div class="col-md-12 reviewBox">
                    <h3 class="text-center">Log In</h3>
                    <form class="login">
                        <div class="form-group">
                            <label for="username-input">Username</label>
                            <!-- Username input -->
                            <input type="username" class="form-control" id="username-input" placeholder="Username" />
                        </div>
                        <div class="form-group">
                            <label for="password-input">Password</label>
                            <!-- Password input -->
                            <input type="password" class="form-control" id="password-input" placeholder="Password" />
                        </div>
                        <!-- Login button -->
                        <button type="submit" class="btn btn-dark">Login</button>
                    </form>
                    <br />
                    <!-- Link to signup page -->
                    <p>Or sign up <a href="/signup">here</a></p>
                </div>
            </div>
            <div class="row spacer"></div>
        </div>
    </section>
    <script type="text/javascript" src="js/login.js"></script>
</body>